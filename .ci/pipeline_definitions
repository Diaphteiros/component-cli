component-cli:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: 'inject-commit-hash'
        inject_effective_version: true
      component_descriptor: ~
      publish:
        dockerimages:
          component-cli:
            registry: 'gcr-readwrite'
            target: 'cli'
            image: eu.gcr.io/gardener-project/component/cli
    steps:
      verify:
        image: 'eu.gcr.io/gardener-project/3rd/golang:1.15.5'
      build:
        image: 'eu.gcr.io/gardener-project/3rd/golang:1.15.5'
        execute: 'build'
        output_dir: 'out'
        timeout: '5m'

  jobs:
    head-update:
      traits:
        draft_release: ~
    pull-request:
      traits:
        pull-request: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
        publish:
          dockerimages:
            component-cli:
              registry: 'gcr-readwrite'
              target: 'cli'
              tag_as_latest: true
              image: eu.gcr.io/gardener-project/component/cli
      steps:
        update-release:
          execute: 'update-release.py'
          depends:
          - 'release'
          inputs:
            OUT_PATH: 'out_path'
