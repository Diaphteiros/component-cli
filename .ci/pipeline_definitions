component-cli:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: 'inject-commit-hash'
        inject_effective_version: true
      component_descriptor: ~
      publish:
        dockerimages:
          component-cli:
            registry: 'gcr-readwrite'
            target: 'cli'
            image: eu.gcr.io/gardener-project/component/cli
    steps:
      verify:
        image: 'eu.gcr.io/gardener-project/3rd/golang:1.15.5'
      publish-helm-charts:
        depends:
        - verify

  jobs:
    head-update:
      traits:
        draft_release: ~
    pull-request:
      traits:
        pull-request: ~
        draft_release: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
        publish:
          dockerimages:
            component-cli:
              registry: 'gcr-readwrite'
              target: 'cli'
              tag_as_latest: true
              image: eu.gcr.io/gardener-project/component/cli
